<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp">

    <com.kogitune.wearlocationwatchface.widget.ObservableScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        tools:context=".MainActivity">

        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/beforePhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/details_container"
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:background="#fff"
                android:orientation="vertical"
                android:paddingLeft="@dimen/keyline_1"
                android:paddingRight="@dimen/keyline_2_minus_16dp"
                android:paddingTop="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Photo search radius(km)"
                    android:textAppearance="@android:style/TextAppearance.Medium" />

                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:id="@+id/search_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dsb_max="25"
                    app:dsb_min="5" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switch_text_accent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Time text accent. " />
            </LinearLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/beforePhoto"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize" />

            <!-- FAB -->
            <include layout="@layout/include_add_schedule_fab" />

        </io.codetail.widget.RevealFrameLayout>

    </com.kogitune.wearlocationwatchface.widget.ObservableScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/menu"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"

        android:background="#ffffff"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.DrawerLayout>
